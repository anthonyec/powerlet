{
  "manifest_version": 3,
  "minimum_chrome_version": "120",
  "name": "Powerlet",
  "description": "Quickly find and run your bookmarklets.",
  "default_locale": "en",
  "version": "2.0.0",
  "icons": {
    "16": "extension_icon_19.png",
    "32": "extension_icon_38.png",
    "128": "extension_icon_128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "bookmarks", "userScripts", "storage"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_main.bundle.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://*/*"],
      "js": ["content_isolated.bundle.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+K",
        "mac": "Command+Shift+K",
        "chromeos": "Ctrl+Shift+K",
        "linux": "Ctrl+Shift+K"
      }
    }
  }
}
