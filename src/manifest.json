{
  "manifest_version": 2,
  "name": "Powerlets",
  "version": "0.0.1",
  "description": "Quick access to your existing bookmarklets.",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "bookmarks",
    "http://*/*",
    "https://*/",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "default_icon.png",
      "38": "default_icon@2x.png"
    }
  },
  "icons": {
    "36": "extension_icon_36.png",
    "128": "extension_icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+P",
        "mac": "Command+Shift+P",
        "chromeos": "Ctrl+Shift+P",
        "linux": "Ctrl+Shift+P"
      }
    }
  }
}
