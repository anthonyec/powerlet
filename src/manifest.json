{
  "manifest_version": 2,
  "name": "powerlets",
  "version": "0.0.1",
  "description": "Bookmarklets with power.",
  "icons": {},
  "permissions": [
    "declarativeContent",
    "activeTab",
    "bookmarks",
    "http://*/*",
    "https://*/",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "default_icon.png",
      "38": "default_icon@2x.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+P",
        "mac": "Command+Shift+P",
        "chromeos": "Ctrl+Shift+P",
        "linux": "Ctrl+Shift+P"
      }
    }
  }
}
