{
  "manifest_version": 2,
  "name": "powerlets",
  "version": "0.0.1",
  "default_locale": "en",
  "description": "Bookmarklets with power.",
  "icons": {},
  "permissions": [
    "declarativeContent",
    "activeTab",
    "bookmarks",
    "http://*/*",
    "https://*/",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
